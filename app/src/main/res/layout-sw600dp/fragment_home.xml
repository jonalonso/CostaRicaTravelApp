<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.jsalazar.costaricatravel.ui.Home.HomeFragment">


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        app:iss_auto_cycle="true"
        app:iss_period="2500"
        app:iss_delay="2500"
        android:background="@android:color/transparent"
        app:iss_error_image="@drawable/ic_errorimg"
        app:iss_placeholder="@mipmap/ic_launcher"
        app:iss_selected_dot="@drawable/ic_circle_selected"
        app:iss_unselected_dot="@drawable/ic_circle"
        app:iss_text_align="CENTER"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:paddingTop="@dimen/modal_padding_horizontal"
        android:layout_below="@id/image_slider"
        android:layout_marginBottom="@dimen/ads_margin">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:alignContent="center"
            app:justifyContent="space_evenly">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/timezone_icon"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_time"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="@string/home_1"/>
                <TextView
                    android:id="@+id/textTimeZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:text="@string/home_1_description"
                    app:drawableEndCompat="@drawable/ic_help"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/currency_icon"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_colon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="@string/home_3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:text="@string/home_3_description"
                    android:id="@+id/textCurrency"
                    app:drawableEndCompat="@drawable/ic_help"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/tip_icon"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_tip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="@string/tip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:text="@string/tip_value"
                    android:id="@+id/textTip"
                    app:drawableEndCompat="@drawable/ic_help" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:layout_wrapBefore="true"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/language_icon"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_language"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="@string/home_4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:text="@string/home_4_description"
                    android:id="@+id/textLanguage"
                    app:drawableEndCompat="@drawable/ic_help" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/gas_icon"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_gas_station"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="@string/gas_station"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:text="@string/gas_station_value"
                    android:id="@+id/textGasStation"
                    app:drawableEndCompat="@drawable/ic_help" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/socket_icon"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_socket"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="@string/home_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:text="@string/home_2_description"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                app:layout_wrapBefore="true"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/climate"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_climate"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="@string/climate"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:text="@string/climate_text"
                    android:id="@+id/textClimate"
                    app:drawableEndCompat="@drawable/ic_help" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/holidays"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_holiday"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="@string/holidays"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:text="@string/holidays_value"
                    android:id="@+id/textHoliday"
                    app:drawableEndCompat="@drawable/ic_help" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/driving_icon"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_driving"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="@string/driving"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:text="@string/driving_value"
                    android:id="@+id/textDriving"
                    app:drawableEndCompat="@drawable/ic_help" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                app:layout_wrapBefore="true"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/sim_icon"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_sim"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:text="@string/sim"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/nav_bar"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:text="@string/sim_value"
                    android:id="@+id/textSim"
                    app:drawableEndCompat="@drawable/ic_help" />
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ads">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>