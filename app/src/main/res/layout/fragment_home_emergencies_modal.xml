<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/modal_padding_horizontal">


    <TextView
        android:id="@+id/gasModalDisclaimer"
        android:paddingTop="6dp"
        android:paddingBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        android:layout_centerHorizontal="true"
        android:justificationMode="inter_word"
        android:text="@string/emergenciesModalText"
        android:textColor="@color/nav_bar"/>

        <TextView
            android:id="@+id/embassyInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:layout_below="@+id/gasModalDisclaimer"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            android:layout_centerHorizontal="true"
            android:autoLink="all"
            android:justificationMode="inter_word"
            android:text="@string/embassy_info"
            android:textColor="@color/nav_bar"/>

</RelativeLayout>